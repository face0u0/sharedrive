    <h2 class="is-size-4 "><span class="under">検索結果</span></h2>
    <div id="result" class="columns is-multiline">
        <% for(let result of results){ %>
            <div class="column is-full">
                <i class="fab fa-google-drive">Googleドライブ</i>
                <a class="results" href="<%= result.url %>"><%= result.title %></a>
            </div>
        <%} %>
    </div>
</div>

